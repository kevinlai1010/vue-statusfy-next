  <meta name="og:image:width" property="og:image:width" content="512">
  <meta name="og:image:height" property="og:image:height" content="512">
  <meta name="og:image:type" property="og:image:type" content="image/png">
  <meta property="og:locale" content="{{ localeIso }}">
  <meta property="og:locale:alternate" content="es_ES">
  <meta name="description" content="{{ pageDescription or renderData.description or description or metadata.description }}">
  <link rel="mask-icon" href="/icons/safari-pinned-tab.svg" color="#3e4e88">
  <link rel="manifest" href="/static/manifest.381d32f3.json">
  <link rel="shortcut icon" href="/static/icons/icon_16.e490d7.png">
  <link rel="apple-touch-icon" href="/static/icons/icon_512.e490d7.png" sizes="512x512">
  <link rel="icon" href="/static/icons/icon_16.e490d7.png" sizes="16x16">
  <link rel="icon" href="/static/icons/icon_120.e490d7.png" sizes="120x120">
  <link rel="icon" href="/static/icons/icon_144.e490d7.png" sizes="144x144">
  <link rel="icon" href="/static/icons/icon_152.e490d7.png" sizes="152x152">
  <link rel="icon" href="/static/icons/icon_192.e490d7.png" sizes="192x192">
  <link rel="icon" href="/static/icons/icon_384.e490d7.png" sizes="384x384">
  <link rel="icon" href="/static/icons/icon_512.e490d7.png" sizes="512x512">
  <link rel="alternate" type="application/rss+xml" href="{{ site.config.baseUrl }}/incidents.en.xml">
  <link rel="alternate" type="application/atom+xml" href="{{ site.config.baseUrl }}/incidents.en.atom">

  <link rel="canonical" href="https://statusfy.marquez.co/">
  <link rel="alternate" href="https://statusfy.marquez.co/" hreflang="en-US">
  <link rel="alternate" href="https://statusfy.marquez.co/es" hreflang="es-ES">

  <script async src="https://cdn.onesignal.com/sdks/OneSignalSDK.js"></script>

  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <div class="container mx-auto px-4 md:w-2/3">
    {% include 'partials/header.njk' %}

    <main>
      {{ content | safe }}

      {# or #}

      {% block content %}{% endblock %}
    </main>

    {% include 'partials/footer.njk' %}
  </div>

  <script src="/scripts/index.js"></script>
</body>

</html>

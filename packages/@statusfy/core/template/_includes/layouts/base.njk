<!doctype html>
<html lang="{{ localeIso }}">

<head>
  <title>{{ pageTitle or renderData.title or title or metadata.title }} | {{ site[locale].title }}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="generator" content="Statusfy">
  <meta name="apple-mobile-web-app-title" content="{{ site[locale].title }}">
  <meta name="author" content="Statusfy">
  <meta name="theme-color" content="#1b1f23">
  <meta name="og:type" property="og:type" content="website">
  <meta name="og:site_name" property="og:site_name" content="{{ site[locale].title }}">
  <meta name="og:url" property="og:url" content="https://statusfy.marquez.co">

{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": false,
    "noEmit": false,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2018",
    "esModuleInterop": true,
    "lib": ["ES2018"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
